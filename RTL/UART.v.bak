module UART (
    input  wire         Clk  ,
    input  wire         Rst_n,
    input  wire         Clear,

    output wire         TX   ,
    input  wire         RX   ); 

    wire [7:0] Data;
    wire load_pluse;

    UART_RX u_uart_rx   (
        .Clk            (Clk        ),
        .Rst_n          (Rst_n      ),
        .Clear          (Clear      ),

        .RX             (RX         ),
        .OutData        (Data       ),
        .LoadPluse      (load_pluse ));

    UART_TX u_uart_rx   (
        .Clk            (Clk        ),
        .Rst_n          (Rst_n      ),
        .Clear          (Clear      ),
        
        .TX             (TX         ),
        .InData         (OutData    ),
        .LoadPluse      (load_pluse ));

endmodule   